{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/diagnostico",
            "dest": "backend/index.js"
        },
        {
            "src": "/consultas",
            "dest": "backend/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "VITE_GEMINI_API_KEY": "@vite_gemini_api_key"
    }
}